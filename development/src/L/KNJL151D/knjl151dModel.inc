<?php

require_once('for_php7.php');
class knjl151dModel extends model
{
    public $cmd;
    public $applicantdiv;
    public $testdiv;
    public $evaltype;
    public $s_examno;
    public $e_examno;
    public $ObjYear;
    public $lastColumn;//CSVの最後の列の値

    public function knjl151dModel()
    {
    }

    public function init()
    {
        if (VARS::get("PROGRAMID")) {
            unset($this->applicantdiv);
            unset($this->testdiv);
            unset($this->evaltype);
            unset($this->s_examno);
            unset($this->e_examno);
        }

        $this->ObjYear      = VARS::post("YEAR");
        $this->applicantdiv = "1";  //固定値
        $this->exam_type    = "1";  //固定値

        $this->cmd = VARS::request("cmd");

        $this->testdiv          = strlen(VARS::post("TESTDIV")) ? VARS::post("TESTDIV") : VARS::post("HID_TESTDIV");
        $this->evaltype         = strlen(VARS::post("EVALTYPE")) ? VARS::post("EVALTYPE") : (strlen(VARS::post("HID_EVALTYPE")) ? VARS::post("HID_EVALTYPE") : "1");
        $this->s_examno         = VARS::post("S_EXAMNO");
        $this->e_examno         = VARS::post("E_EXAMNO");

        $this->hid_examno       = VARS::post("HID_EXAMNO");

        $this->interview = array();
        $array = explode(",", $this->hid_examno);
        foreach ($array as $key => $examno) {
            $addarrwk = array();
            $addarrwk["INTERVIEW_VAL"] = VARS::post("INTERVIEW_VAL_".$examno);
            $addarrwk["INTERVIEW_RMK"] = VARS::post("INTERVIEW_RMK_".$examno);
            $this->interview[$examno] = $addarrwk;
        }

        //プロパティファイルの読込み
        $this->getPropertiesAll();
        if ($this->Properties["use_prg_schoolkind"] == "1") {
            $this->getSelectSchoolKind();
        }
        $this->lastColumn = 'DUMMY';
        if ($this->Properties["csv_LastColumn"] != '') {
            $this->lastColumn = $this->Properties["csv_LastColumn"];
        }
    }

    public function &getMainModel()
    {
    }

    // 編集完了用のモデルを返します
    public function &getUpdateModel()
    {
        //更新
        knjl151dQuery::getUpdateQuery($this);
        $this->setMessage("MSG201");
    }

    //CSV出力
    public function getCsvModel()
    {
        //DB接続
        $db = Query::dbCheckOut();

        //初期化
        $contents = "";

        //ヘッダ
        $header = array();
        $header["ENTEXAMYEAR"]       = "入試年度";
        $header["TESTDIV"]           = "入試区分";
        $header["EXAMNO"]            = "受験番号";
        $header["NAME"]              = "氏名";
        $header["INTERVIEW_VALUE"]   = "面接評価";
        $header["INTERVIEW_REMARK"]  = "面接所見";
        $header["INTERVIEW_VALUE2"]  = "小論文評価";
        $header["INTERVIEW_REMARK2"] = "小論文テーマ";
        $header[$this->lastColumn]   = $this->lastColumn;

        //ヘッダ出力
        $sep = "";
        foreach ($header as $field => $label) {
            $contents .= $sep.$label;
            $sep = ",";
        }
        $contents .= "\n";

        //データ出力
        $data = false;
        $query = knjl151dQuery::selectQuery($this, "csv");
        $result = $db->query($query);
        while ($row = $result->fetchRow(DB_FETCHMODE_ASSOC)) {
            $sep = "";
            foreach ($header as $field => $label) {
                $contents .= $sep.$row[$field];
                $sep = ",";
            }
            $contents .= "\n";
            $data = true;
        }
        $result->free();

        //DB切断
        Query::dbCheckIn($db);

        //CSV出力
        if ($data) {
            $title = $this->ObjYear."年度"."小論文：面接評価入力";
            $filename = sprintf("%s.csv", $title);
            common::downloadContents($contents, $filename, "SJIS-win");
            return true;
        } else {
            $this->setWarning("MSG303");
            return false;
        }
    }
}
