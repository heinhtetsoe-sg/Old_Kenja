    //CSVデータ出力
    public function selectMainQuery($model)
    {
        if ($model->mode == 'grd') {
            $table_regd  = 'GRD_REGD_DAT';
            $table_base  = 'GRD_BASE_MST';
            $table_emp   = 'GRD_HEXAM_EMPREMARK_DAT';
            $table_regdH = 'GRD_REGD_HDAT';
        } else {
            $table_regd  = 'SCHREG_REGD_DAT';
            $table_base  = 'SCHREG_BASE_MST';
            if ($model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                $table_emp   = 'HEXAM_EMPREMARK_SEQ_DAT';
            } else {
                $table_emp   = 'HEXAM_EMPREMARK_DAT';
            }
            $table_regdH = 'SCHREG_REGD_HDAT';
        }

        $query  = " SELECT ";
        $query .= "     T1.GRADE, ";
        $query .= "     T1.HR_CLASS, ";
        $query .= "     T1.ATTENDNO, ";
        $query .= "     T2.NAME, ";
        $query .= "     T1.SCHREGNO, ";
        if ($model->mode != 'grd' && $model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
            $query .= "     T3.PATTERN_SEQ, ";
        }
        $query .= "     T3.JOBHUNT_REC, ";
        $query .= "     T3.JOBHUNT_ABSENCE, ";
        $query .= "     T3.JOBHUNT_HEALTHREMARK, ";
        $query .= "     T3.JOBHUNT_RECOMMEND, ";
        $query .= "     '{$model->lastColumn}' AS LASTCOLUMN ";
        $query .= " FROM ";
        $query .= "     {$table_regd} T1 ";
        $query .= "     LEFT JOIN {$table_base} T2 ON T2.SCHREGNO = T1.SCHREGNO ";
        $query .= "     LEFT JOIN {$table_emp} T3 ON T3.SCHREGNO = T1.SCHREGNO ";
        $query .= "     LEFT JOIN {$table_regdH} T4 ON  T4.YEAR     = T1.YEAR ";
        $query .= "                                 AND T4.SEMESTER = T1.SEMESTER ";
        $query .= "                                 AND T4.GRADE    = T1.GRADE ";
        $query .= "                                 AND T4.HR_CLASS = T1.HR_CLASS ";
        if ($model->Properties["useSchool_KindField"] == "1" && SCHOOLKIND != "") {
            $query .= "     INNER JOIN SCHREG_REGD_GDAT G1 ";
            $query .= "              ON T1.YEAR         = G1.YEAR ";
            $query .= "             AND T1.GRADE        = G1.GRADE ";
            $query .= "             AND G1.SCHOOL_KIND  = '".SCHOOLKIND."' ";
        }
        $query .= " WHERE ";
        $query .= "     T1.YEAR || T1.SEMESTER = '".$model->field["YEAR"]."' ";
        if ($model->field["GRADE_HR_CLASS"] != "") {
            $query .= "     AND T1.GRADE || T1.HR_CLASS = '".$model->field["GRADE_HR_CLASS"]."' ";
        }
        if (AUTHORITY2 == DEF_UPDATE_RESTRICT || AUTHORITY2 == DEF_REFER_RESTRICT) {
            $query .= "     AND (T4.TR_CD1 = '". STAFFCD ."' OR";
            $query .= "          T4.TR_CD2 = '". STAFFCD ."' OR";
            $query .= "          T4.TR_CD3 = '". STAFFCD ."' OR";
            $query .= "          T4.SUBTR_CD1 = '". STAFFCD ."' OR";
            $query .= "          T4.SUBTR_CD2 = '". STAFFCD ."' OR";
            $query .= "          T4.SUBTR_CD3 = '". STAFFCD ."')";
        }
        $query .= " ORDER BY ";
        $query .= "     T1.GRADE, ";
        $query .= "     T1.HR_CLASS, ";
        $query .= "     T1.ATTENDNO, ";
        $query .= "     T1.SCHREGNO ";
        if ($model->mode != 'grd' && $model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
            $query .= "     , T3.PATTERN_SEQ ";
        }

        return $query;
    }
