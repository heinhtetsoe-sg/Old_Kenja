    //年度一覧
    public function getSelectFieldSQL($model)
    {
        if ($model->mode == 'grd') {
            $table = 'GRD_REGD_HDAT';
        } else {
            $table = 'SCHREG_REGD_HDAT';
        }

        $query  = " SELECT DISTINCT T1.YEAR, T1.SEMESTER, T2.SEMESTERNAME ";
        $query .= " FROM {$table} T1 ";
        $query .= "         INNER JOIN SEMESTER_MST T2 ON T1.YEAR = T2.YEAR AND T1.SEMESTER = T2.SEMESTER ";
        if ($model->Properties["useSchool_KindField"] == "1" && SCHOOLKIND != "") {
            $query .= "         INNER JOIN SCHREG_REGD_GDAT G1 ";
            $query .= "              ON T1.YEAR         = G1.YEAR ";
            $query .= "             AND T1.GRADE        = G1.GRADE ";
            $query .= "             AND G1.SCHOOL_KIND  = '".SCHOOLKIND."' ";
        }
        $query .= " ORDER BY T1.YEAR, T1.SEMESTER";

        return $query;
    }

