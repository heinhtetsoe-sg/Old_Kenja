    //マスタの追加（ＣＳＶデータより読込）
    public function insertQueryCsv($model, &$data_arr)
    {
        if ($model->mode == 'grd') {
            $table_emp  = 'GRD_HEXAM_EMPREMARK_DAT';
        } else {
            if ($model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                $table_emp  = 'HEXAM_EMPREMARK_SEQ_DAT';
            } else {
                $table_emp  = 'HEXAM_EMPREMARK_DAT';
            }
        }
        $data = array();

        $db = Query::dbCheckOut();
        $db->autoCommit(false);

        $cnt = 0;   //処理件数
        for ($i = 0; $i < get_count($data_arr); $i++) {
            //データセット
            $data["SCHREGNO"][TEXT]             = $data_arr[$i]["SCHREGNO"];
            if ($model->mode != 'grd' && $model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                $data["PATTERN_SEQ"][TEXT]          = $data_arr[$i]["PATTERN_SEQ"];
            }
            $data["JOBHUNT_REC"][TEXT]          = $data_arr[$i]["JOBHUNT_REC"];
            $data["JOBHUNT_ABSENCE"][TEXT]      = $data_arr[$i]["JOBHUNT_ABSENCE"];
            $data["JOBHUNT_HEALTHREMARK"][TEXT] = $data_arr[$i]["JOBHUNT_HEALTHREMARK"];
            $data["JOBHUNT_RECOMMEND"][TEXT]    = $data_arr[$i]["JOBHUNT_RECOMMEND"];
            $data["REGISTERCD"][TEXT]           = STAFFCD;
            $data["UPDATED"][NUMBER]            = "SYSDATE()";

            $query  = "SELECT COUNT(*) FROM {$table_emp} WHERE SCHREGNO = '{$data_arr[$i]["SCHREGNO"]}' ";
            if ($model->mode != 'grd' && $model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                $query .= " AND PATTERN_SEQ = '{$data_arr[$i]["PATTERN_SEQ"]}' ";
            }
            if (1 > $db->getOne($query)) {
                $query = Query::insertSQL($data, $table_emp);
            } else {
                $where  = "WHERE SCHREGNO = '{$data_arr[$i]["SCHREGNO"]}' ";
                if ($model->mode != 'grd' && $model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                    $where .= "    AND PATTERN_SEQ = '{$data_arr[$i]["PATTERN_SEQ"]}' ";
                }

                $query = Query::updateSQL($data, $table_emp, $where);
            }
            $db->query($query);

            //HEXAM_ENTREMARK_DATにある生徒はそれも更新する
            if ($model->mode == 'grd') {
                if ($model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                    $tableName = 'HEXAM_EMPREMARK_SEQ_DAT';
                } else {
                    $tableName = 'HEXAM_EMPREMARK_DAT';
                }

                $query  = " SELECT ";
                $query .= "     COUNT(*) ";
                $query .= " FROM ";
                $query .= "     {$tableName} ";
                $query .= " WHERE ";
                $query .= "     SCHREGNO = '{$data_arr[$i]["SCHREGNO"]}' ";
                if ($model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                    $query .= "     AND PATTERN_SEQ = '{$data_arr[$i]["PATTERN_SEQ"]}' ";
                }

                if (0 < $db->getOne($query)) {
                    $where  = "WHERE SCHREGNO = '{$data_arr[$i]["SCHREGNO"]}' ";
                    if ($model->Properties["tyousasyo_shokenTable_Seq"] == "1") {
                        if ($model->mode == 'grd') {
                            $where .= "    AND PATTERN_SEQ = '1' ";
                        } else {
                            $where .= "    AND PATTERN_SEQ = '{$data_arr[$i]["PATTERN_SEQ"]}' ";
                        }
                    }

                    $query = Query::updateSQL($data, $tableName, $where);
                    $db->query($query);
                }
            }

            $cnt++;
        }
        $db->commit();
        Query::dbCheckIn($db);

        return $cnt;
    }

