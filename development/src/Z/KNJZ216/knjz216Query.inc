        $query .= "     MOCK_SUBCLASS_GROUP_MST ";
        $query .= " WHERE ";
        $query .= "         YEAR       = '".CTRL_YEAR."' ";
        $query .= "     AND MOCKCD     = '".$field["MOCKCD"]."' ";
        $query .= "     AND GROUP_DIV  = '".$field["GROUP_DIV"]."' ";
        $query .= "     AND GRADE      = '".$field["GRADE"]."' ";
        $query .= "     AND COURSECD   = '".$field["COURSECD"]."' ";
        $query .= "     AND MAJORCD    = '".$field["MAJORCD"]."' ";
        $query .= "     AND COURSECODE = '".$field["COURSECODE"]."' ";

        return $query;
    }

    //模試(右フレーム)
    function getMockname1()
    {
        $query  = " SELECT ";
        $query .= "     MOCKCD AS VALUE, ";
        $query .= "     MOCKCD || '：' || MOCKNAME1 AS LABEL ";
        $query .= " FROM ";
        $query .= "     MOCK_MST ";
        $query .= " ORDER BY ";
        $query .= "     MOCKCD ";

        return $query;
    }

    //模試(左フレーム)
    function getMockcd()
    {
        $query  = " SELECT ";
        $query .= "     T1.MOCKCD AS VALUE, ";
        $query .= "     T1.MOCKCD || '：' || T2.MOCKNAME1 AS LABEL ";
        $query .= " FROM ";
        $query .= "     MOCK_SUBCLASS_GROUP_MST T1 LEFT JOIN MOCK_MST T2 ON T1.MOCKCD = T2.MOCKCD ";
        $query .= " WHERE ";
        $query .= "     YEAR = '".CTRL_YEAR."' ";
        $query .= " GROUP BY ";
        $query .= "     T1.MOCKCD, T2.MOCKNAME1 ";
        $query .= " ORDER BY ";
        $query .= "     T1.MOCKCD ";

        return $query;
    }

    //学年
    function getGrade($table)
    {
        $query  = " SELECT ";
        $query .= "     GRADE AS VALUE, ";
        $query .= "     GRADE AS LABEL ";
        $query .= " FROM ";
        $query .= $table;
        $query .= " WHERE ";
        $query .= "     YEAR = '".CTRL_YEAR."' ";
        if ($table == "SCHREG_REGD_HDAT") {
            $query .= "     AND GRADE < '11' ";
        }
        $query .= " GROUP BY ";
        $query .= "     GRADE ";
        $query .= " ORDER BY ";
        $query .= "     GRADE ";

        return $query;
    }

    //科目数
    function getGroupDiv()
    {
