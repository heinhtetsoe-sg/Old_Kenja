    //対象外の生徒取得
    function getSchnoIdou($model, $gakki) {
        $date = str_replace("/","-",$model->field["TAISYOBI"]);
        $year = CTRL_YEAR;

        $query  = " SELECT ";
        $query .= "     T1.SCHREGNO, ";
        $query .= "     T1.ATTENDNO ";
        $query .= " FROM ";
        $query .= "     SCHREG_REGD_DAT T1, ";
        $query .= "     SEMESTER_MST T2 ";
        $query .= " WHERE ";
        $query .= "         T1.YEAR               = '{$year}' ";
        $query .= "     AND T1.SEMESTER           = '{$gakki}' ";
        $query .= "     AND T1.YEAR               = T2.YEAR ";
        $query .= "     AND T1.SEMESTER           = T2.SEMESTER ";
        $query .= "     AND T1.GRADE||T1.HR_CLASS = '{$model->field["GRADE_HR_CLASS"]}' ";
                        //転学(2)・退学(3)者 但し異動日が学期終了日または異動基準日より小さい場合
                        //転入(4)・編入(5)者 但し異動日が学期終了日または異動基準日より大きい場合
        $query .= "     AND (EXISTS(SELECT 'X' FROM SCHREG_BASE_MST S1 ";
        $query .= "                WHERE S1.SCHREGNO = T1.SCHREGNO AND ";
        $query .= "                    ((S1.GRD_DIV IN('2','3') AND S1.GRD_DATE <  ";
        $query .= "                         CASE WHEN T2.EDATE < '{$date}' ";
        $query .= "                              THEN T2.EDATE ";
        $query .= "                              ELSE '{$date}' ";
        $query .= "                         END) OR ";
        $query .= "                     (S1.ENT_DIV IN('4','5') AND S1.ENT_DATE >  ";
        $query .= "                         CASE WHEN T2.EDATE < '{$date}' ";
        $query .= "                              THEN T2.EDATE ";
        $query .= "                              ELSE '{$date}' ";
        $query .= "                         END)) ) OR ";
                           //留学(1)・休学(2)者
        $query .= "        EXISTS(SELECT 'X' FROM SCHREG_TRANSFER_DAT S1 ";
        $query .= "                WHERE S1.SCHREGNO = T1.SCHREGNO AND ";
        $query .= "                      S1.TRANSFERCD IN ('1','2') AND  ";
        $query .= "                      CASE WHEN T2.EDATE < '{$date}' ";
        $query .= "                           THEN T2.EDATE ";
        $query .= "                           ELSE '{$date}' ";
        $query .= "                      END ";
        $query .= "                      BETWEEN S1.TRANSFER_SDATE AND S1.TRANSFER_EDATE) ) ";
        $query .= " ORDER BY T1.ATTENDNO ";

        return $query;
    }

    //対象者一覧
    function getcategoryName($model, $gakki) {
